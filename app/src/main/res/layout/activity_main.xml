<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/textview"
              android:fontFamily="serif-monospace"
              android:textSize="24sp"
              android:textAlignment="center"
              android:text="@string/add_tasks"
              app:layout_constraintBottom_toTopOf="@id/list_view"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>

    <ListView android:layout_width="match_parent" android:layout_height="515dp"
              android:id="@+id/list_view"
              app:layout_constraintTop_toBottomOf="@id/textview" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/fab"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/list_view"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/list_view" android:layout_marginStart="347dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.961"/>

</android.support.constraint.ConstraintLayout>